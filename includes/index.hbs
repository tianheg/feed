<!DOCTYPE html>
<html lang="en">

  <head>
    <title>{{siteTitle}}</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />
    <link rel="alternate" type="application/rss+xml" title="{{siteTitle}}" href="{{feedHref}}" />
    <link href="index.css" rel="stylesheet" />
    <!-- %before-head-end.html% -->
  </head>

  <body>
    <!-- %after-body-begin.html% -->
    <header>
      <time id="build-timestamp" datetime="{{siteBuildTimestamp}}">{{siteBuildTimestamp}}</time>
      <a class="header-link" href="{{projectUrl}}">osmosfeed {{cliVersion}}</a>
      <button class="saved-articles-toggle" data-action="toggle-saved-articles" title="View saved articles">
        Saved Articles (<span id="saved-count">0</span>)
      </button>
    </header>
    <section id="saved-articles-section" class="saved-articles-section card" style="display: none;">
      <h2 class="saved-articles-heading">Saved Articles</h2>
      <div id="saved-articles-list" class="saved-articles-list"></div>
      <div id="saved-articles-empty" class="saved-articles-empty" style="display: none;">
        <p>No saved articles yet. Click the save button on any article to save it for later.</p>
      </div>
    </section>
    {{#each dates}}
      <section class="daily-content js-toggle-accordions-scope">
        <h2 class="daily-heading">
          <button
            class="daily-heading-toggle"
            data-action="toggle-accordions"
            title="Click to toggle the day, Ctrl + click to toggle all."
          >
            <time class="daily-heading-toggle__weekday js-offset-weekday" data-offset-date={{isoOffsetPublishDate}} datetime="{{isoUtcPublishTime}}">{{isoOffsetPublishDate}}</time>
            <time class="daily-heading-toggle__date js-offset-date" data-offset-date={{isoOffsetPublishDate}} datetime="{{isoUtcPublishTime}}"></time>
          </button>
        </h2>
        <ul class="sources card">
          {{#each sources}}
            <li class="card__section">
              <section class="js-toggle-accordions-scope">
                <h3 class="source-heading">
                  <button
                    class="source-heading__name"
                    data-action="toggle-accordions"
                    title="Click to toggle the source, Ctrl + click to toggle all."
                  >{{title}}</button>
                  <a class="source-heading__link" href="{{siteUrl}}" target="_blank">Open</a>
                </h3>
                <section class="articles-per-source">
                  {{#each articles}}
                    <article class="article-item" data-article-id="{{id}}">
                      <details
                        class="article-expander"
                        data-action="toggle-native-accordion"
                        data-accordion-key="{{id}}"
                      >
                        <summary class="article-expander__title">
                          <span class="article-title-text">{{title}}</span>
                          <button
                            class="save-button"
                            data-action="save-article"
                            data-article-id="{{id}}"
                            data-article-title="{{title}}"
                            data-article-link="{{link}}"
                            data-article-description="{{description}}"
                            data-article-image="{{imageUrl}}"
                            data-article-source="{{../title}}"
                            data-article-date="{{../isoOffsetPublishDate}}"
                            title="Save for later"
                            type="button"
                          >
                            <span class="save-button-text">Save</span>
                          </button>
                        </summary>
                        <a class="article-summary-link article-summary-box-outer" href="{{link}}" target="_blank">
                          <div class="article-summary-box-inner media-object">
                            {{#if imageUrl}}
                              <img src="{{imageUrl}}" loading="lazy" class="media-object__media article-image" />
                            {{/if}}
                            <span class="media-object__text">
                              <span>{{description}}</span>
                              {{#if readingTimeInMin}}
                                &ensp;<span class="article-reading-time">(&hairsp;{{readingTimeInMin}}
                                  min&hairsp;)</span>
                              {{/if}}
                            </span>
                          </div>
                        </a>
                      </details>
                    </article>
                  {{/each}}
                </section>
              </section>
            </li>
          {{/each}}
        </ul>
      </section>
    {{/each}}
    <script src="index.js"></script>
    <!-- %before-body-end.html% -->
  </body>

</html>
